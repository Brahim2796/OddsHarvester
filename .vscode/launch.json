{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug OddsPortalScrapperApp",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": false,
            "args": [
                "--sport", "football",
                // "--league", "premier-league",
                "--date", "20250117",
                // "--season", "2023-2024",
                "--storage", "local",
                "--markets", "1x2"
            ]
        }
    ]
}